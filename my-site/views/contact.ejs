<%- include('partials/head', { title, description, canonicalUrl, ogImage }) %>
<%- include('partials/header', { pageTitle: 'İletişim', siteName }) %>
<main>
  <p>Bizimle iletişime geçin, görüşleriniz bizim için değerli!</p>
  <% if (success) { %>
    <div class="alert success">Mesajınız başarıyla gönderildi!</div>
  <% } else if (error) { %>
    <div class="alert error"><%= error %></div>
  <% } %>
  <form action="/contact" method="post">
    <label for="name">Adınız:</label>
    <input type="text" id="name" name="name" required value="<%= formData.name || '' %>">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required value="<%= formData.email || '' %>">
    <label for="message">Mesajınız:</label>
    <textarea id="message" name="message" rows="5" required><%= formData.message || '' %></textarea>
    <button type="submit">Gönder</button>
  </form>
</main>
<%- include('partials/footer', { siteName }) %>
