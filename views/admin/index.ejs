<%- include('../partials/header', {
  title: 'Admin Paneli - Ürün Yönetimi',
  description: '',
  keywords: 'admin, ürün, yönetim',
  headerTitle: 'Admin Paneli'
}) %>
<main>
  <h1>Ürün Yönetimi</h1>
  <p><a href="/admin/products/new">Yeni Ürün Ekle</a></p>
  <% if (products && products.length === 0) { %>
    <p>Henüz hiç ürün yok.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Ad</th>
          <th>Fiyat (TL)</th>
          <th>Stok</th>
          <th>İşlemler</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price.toFixed(2) %></td>
            <td><%= product.stock %></td>
            <td>
              <form action="/admin/products/<%= product._id %>/delete" method="POST" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                <button type="submit">Sil</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</main>
<%- include('../partials/footer') %>